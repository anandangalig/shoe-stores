<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <meta charset="utf-8">
        <title>Shoes: Stores and Brands</title>
    </head>
    <body>
        <div class="container">
            <h1>Shoes, Shoes, Shoes, Shoes!</h1><br>
            <div class="row">
                <div class="col-sm-6">
                    <form action="/create_store" method="post">
                        <label for="new_store_name">Add New Store:</label>
                        <input name="new_store_name" class="form-control" placeholder="Enter Store Name" required><br>
                        <button class="btn btn-success" type="submit">Create</button>
                    </form>
                    <h2>Local Stores:</h2>
                    {% if stores is not empty %}
                        {% for store in stores %}
                            <li><a href="/store/{{store.getId}}">{{store.getName}}</a></li>
                        {% endfor %}
                        <form action="/delete_all_stores" method="post">
                            <button type="submit" class="btn btn-danger">Delete All</button>
                        </form>
                    {% else %}
                        <h4>There are no local stores saved</h4>
                    {% endif %}
                </div>
                <div class="col-sm-6">
                    <form action="/create_brand" method="post">
                        <label for="new_brand_name">Add New Brand:</label>
                        <input name="new_brand_name" class="form-control" placeholder="Enter Brand Name" required><br>
                        <button class="btn btn-success" type="submit">Create</button>
                    </form>
                    <h2>Available Brands:</h2>
                    {% if brands is not empty %}
                        {% for brand in brands %}
                            <li><a href="/brand/{{brand.getId}}">{{brand.getName}}</a></li>
                        {% endfor %}
                        <form action="/delete_all_brands" method="post">
                            <button type="submit" class="btn btn-danger">Delete All</button>
                        </form>
                    {% else %}
                        <h4>There are no brands saved</h4>
                    {% endif %}
                </div>
            </div>
        </div>
    </body>
</html>
